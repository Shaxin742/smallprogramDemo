.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.chartContainer{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  font-size: 32rpx;
  color: #aaa;
  justify-content: center;
}
.page-header-text {
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #ccc; 
}
.col333{
  color: #333
}
.col666{
  color: #666
}
.col999{
  color: #999
}
.indent{
  text-indent: 2em;
}
.mt30{
  margin-top: 30rpx
}
.opa0{
  opacity: 0
}
.bold{
  font-weight: bold;
}
.mt40{
  margin-top: 40rpx
}