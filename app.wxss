/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.chartContainer{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  font-size: 32rpx;
  color: #aaa;
  justify-content: center;
  margin-top: 50rpx;
}
.page-header-text {
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #ccc; 
}