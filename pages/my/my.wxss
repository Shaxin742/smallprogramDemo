.bg {
  padding-top: 100rpx;
  height: 500rpx;
  width: 100%;
  background: url(http://pqe7sifjw.bkt.clouddn.com/resumebg.jpg) no-repeat center center;
  background-size: cover;
  text-align: center;
  font-size: 28rpx;
}

.aver {
  border-radius: 50%;
  overflow: hidden;
  margin: 20px auto;
  width: 160rpx;
  height: 160rpx;
}

.aver image {
  width: 160rpx;
  height: 160rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
  background: url(http://pqe7sifjw.bkt.clouddn.com/share.jpg) no-repeat center center;
  background-size: cover;
  padding: 10rpx;
}

/* 内容 */

.Con {
  margin-top: 60rpx;
  padding: 30rpx;
}

.Con .title {
  font-size: 30rpx;
  text-align: center;
}

.tit {
  margin-bottom: 8rpx;
}

.Con .titleBor {
  height: 6rpx;
  max-width: 70rpx;
  background: rgb(51, 122, 183);
  margin: 0 auto;
}

.Con .conten {
  margin-top: 30rpx;
  font-size: 26rpx;
  line-height: 52rpx;
}

.chartCon {
  height: 800rpx;
  width: 100%;
}

.works {
  margin-top: 60rpx;
  font-size: 26rpx;
}
.works .cont{
  line-height: 50rpx;
  margin-left: 50rpx;
}
.works .cont .diaCon{
  width: 50rpx;
  display: inline-block;
}
.works .diamond{
  height:50rpx;
  display:inline-block;
  font-size: 40rpx;
}
.works .cont .co{
  border-left: 4rpx solid #666;
  padding-left: 36rpx;
  margin-left: 10rpx
}
/* 轮播 */
.lunbo {
  width: 100%;
  margin-top: 120rpx;
  height: 600rpx;
  box-sizing: border-box;
}

swiper {
  height: 100%;
}

.content {
  font-size: 16px;
  color: #333;
  padding: 20rpx 40rpx;
  transition: all 1s;
}

swiper-item {
  text-align: center;
}

swiper-item image {
  width: 100%;
  /* height: auto; */
}
.box {
  width: 90%;
  /* height: 600rpx; */
  display: inline-block;
  margin: 40px 0;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2;
  transition: all 1s;
}
.curr{
  /* height: 700rpx; */
  margin: 10px 0;
}
.curr .content{
  padding: 60rpx 40rpx;
  transition: all 1s;
}